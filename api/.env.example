# API Configuration
# Copy this file to .env and update the values

# Application secret key - generate with: openssl rand -base64 32
APP_KEY=changeme-generate-with-openssl-rand-base64-32

# Database connection
DATABASE_URL=postgres://raptor:raptor_secret@postgres:5432/raptor

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY_DAYS=7

# Password hashing cost (higher = more secure but slower)
BCRYPT_COST=12

# API server address
API_ADDR=0.0.0.0:3000

# Frontend URL (for email links)
APP_URL=http://localhost:5173

# Logging level
RUST_LOG=info

# Admin User (created on first run if not exists)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-password

# SMTP Configuration (optional - for email features)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=Raptor
