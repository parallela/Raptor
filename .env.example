# Raptor Configuration
# Copy this file to .env and configure your settings

# ===================
# Application Key (REQUIRED)
# Generate with: openssl rand -base64 32
# ===================
APP_KEY=

# ===================
# Database
# ===================
DATABASE_URL=postgres://raptor:raptor_secret@localhost:5432/raptor

# ===================
# API Server
# ===================
API_ADDR=0.0.0.0:3000
JWT_SECRET=
JWT_EXPIRY_DAYS=7
BCRYPT_COST=12

# ===================
# Application URLs
# ===================
APP_URL=http://localhost:5173

# ===================
# SMTP Configuration (optional)
# ===================
#SMTP_HOST=smtp.gmail.com
#SMTP_PORT=587
#SMTP_USERNAME=
#SMTP_PASSWORD=
#SMTP_FROM_EMAIL=noreply@yourapp.com
#SMTP_FROM_NAME=Raptor

# ===================
# Admin User (for initial setup)
# ===================
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@localhost
ADMIN_PASSWORD=admin123

# ===================
# Daemon Configuration
# ===================
DAEMON_ADDR=0.0.0.0:8080
DAEMON_API_KEY=
SFTP_BASE_PATH=/data/containers
SFTP_HOST=localhost
SFTP_PORT=22
AVAILABLE_IPS=0.0.0.0

# ===================
# Panel Configuration
# ===================
VITE_API_URL=http://localhost:3000
ORIGIN=http://localhost:5173

# ===================
# Logging
# ===================
RUST_LOG=info
